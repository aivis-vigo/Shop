{% extends 'Layout/base.html.twig' %}

{% block title %}
    Silly Sales Shack
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section class="w-full justify-center">
        <div class="container mx-auto my-10">
            <div class="flex gap-x-4 justify-end">
                <form action="/create-option" method="post">
                    <input type="hidden" name="section_id" value="{{ id }}">

                    <button type="submit">
                        <svg class="h-8 w-8 text-white"
                             fill="none"
                             viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M12 4v16m8-8H4"/>
                        </svg>
                    </button>
                </form>
                <form action="/options/edit" method="post">
                    <input type="hidden" name="section_id" value="{{ id }}">

                    <button type="submit">
                        <svg class="h-8 w-8 text-white"
                             width="24"
                             height="24"
                             viewBox="0 0 24 24"
                             stroke-width="2"
                             stroke="currentColor"
                             fill="none"
                             stroke-linecap="round"
                             stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z"/>
                            <path d="M7 10h3v-3l-3.5 -3.5a6 6 0 0 1 8 8l6 6a2 2 0 0 1 -3 3l-6-6a6 6 0 0 1 -8 -8l3.5 3.5"/>
                        </svg>
                    </button>
                </form>
            </div>
            <div class="flex flex-wrap -mx-4">
                {% for option in options %}
                    <div class="w-full sm:w-1/2 md:w-1/2 xl:w-1/4 p-4">
                        <a href="{{ option.title|lower }}/{{ option.id }}/"
                           class="c-card block bg-white shadow-md shadow-black hover:shadow-xl rounded-lg overflow-hidden duration-300">
                            <div class="relative pb-48 overflow-hidden">
                                <img class="absolute inset-0 h-full w-full object-cover transition ease-in-out delay-150 hover:-translate-y-2 hover:scale-110 duration-300"
                                     src="{{ option.url }}"
                                     alt="{{ option.title }}">
                            </div>
                            <div class="p-4">
                                <h2 class="mt-2 mb-2 font-bold">
                                    {{ option.title }} ({{ option.listings|length }})
                                </h2>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}