{% extends 'Layout/base.html.twig' %}

{% block title %}
    Silly Sales Shack
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
        <h2 class="mb-4 text-xl font-bold text-white">
            Edit Listing
        </h2>
        <form action="/update-listing" method="post">
            <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
                <input type="hidden" name="id" value="{{ listing.id }}">
                <div class="sm:col-span-2">
                    <label for="title"
                           class="block mb-2 text-sm font-medium text-white">
                        Title
                    </label>
                    <input type="text"
                           name="title"
                           id="title"
                           class="bg-gray-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                           value="{{ listing.title }}"
                           required>
                </div>
                <div class="sm:col-span-2">
                    <label for="description"
                           class="block mb-2 text-sm font-medium text-white">
                        Description
                    </label>
                    <textarea type="text"
                           name="description"
                           id="description"
                           class="bg-gray-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                           required>
                        {{ listing.description }}
                    </textarea>
                </div>
                <div class="sm:col-span-2">
                    <label for="price"
                           class="block mb-2 text-sm font-medium text-white">
                        Price
                    </label>
                    <input type="number"
                           step="0.01"
                           name="price"
                           id="price"
                           class="bg-gray-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                           value="{{ listing.price }}"
                           required>
                </div>
                <div class="sm:col-span-2">
                    <label for="location"
                           class="block mb-2 text-sm font-medium text-white">
                        Location
                    </label>
                    <input type="text"
                           name="location"
                           id="location"
                           class="bg-gray-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5"
                           value="{{ listing.location }}"
                           required>
                </div>
            </div>
            <button type="submit"
                    class="inline-flex items-center justify-end px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-black bg-amber-300 rounded-lg focus:ring-4 focus:ring-primary-200 ">
                Update
            </button>
        </form>
    </div>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}